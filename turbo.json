{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NEXT_PUBLIC_BACKEND_URL"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check": {
      "dependsOn": ["^topo"]
    },
    "check:biome": {
      "dependsOn": ["^topo"]
    },
    "check:types": {
      "dependsOn": ["^topo"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "checkall": {
      "dependsOn": ["checkts", "lint", "format"]
    }
  }
}
